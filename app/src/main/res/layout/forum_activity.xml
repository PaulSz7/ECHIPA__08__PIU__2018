<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/textview_border">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="-45dp"
            android:background="@drawable/black_border"
            android:src="@drawable/forum" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/lightPink"
            android:padding="10dp"
            android:text="Forum"
            android:textAlignment="center"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/black_border"
            android:src="@drawable/ranking" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="80dp"
            android:background="@color/lightPink"
            android:padding="10dp"
            android:text="Ranking"
            android:textAlignment="center"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_username"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_above="@+id/iv_chatIcon"
            android:layout_alignStart="@+id/iv_profile"
            android:layout_marginBottom="-30dp"
            android:text="student" />


        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/blank_profile_picture_973460_640" />

        <ImageView
            android:id="@+id/iv_chatIcon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignStart="@+id/iv_profile"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-34dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/filled_chat" />

        <ImageView
            android:id="@+id/iv_notifIcon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignTop="@+id/iv_chatIcon"
            android:layout_alignEnd="@+id/iv_profile"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="105dp"
            android:src="@drawable/img_489991" />

        <ImageView
            android:id="@+id/iv_pointsIcon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/iv_profile"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="135dp"
            android:src="@drawable/gold_coins_icon_20" />


            <TextView
                android:id="@+id/tv_points"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/tv_username"
                android:layout_alignBottom="@+id/iv_pointsIcon"
                android:text="37.5" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_forum"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="223dp"
        android:background="@drawable/forum_section">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="234dp"
            android:layout_marginBottom="295dp"
            android:padding="5dp"
            android:text="Student1 asked:"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-230dp"
            android:layout_toStartOf="@+id/tv_user"
            android:src="@drawable/blank_profile_picture_973460_640" />

        <TextView
            android:id="@+id/text_comment"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/forum_section"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="40dp"
            android:text="What permission do I need to access Internet from an Android application?" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_below="@+id/text_comment"
            android:layout_alignParentEnd="true"
            android:text="11 Ian 2019"
            android:textAlignment="center"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_ans"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_above="@+id/text_comment"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-28dp"
            android:text="3 answers"
            android:textAlignment="center"
            android:textStyle="italic" />


    </RelativeLayout>

    <RelativeLayout
