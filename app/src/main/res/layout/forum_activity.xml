            tools:layout_constraintTop_creator="0"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="40dp"
            android:text="Allow multi-line in EditText view in Android?" />

        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_below="@+id/text_comment2"
            android:layout_alignParentEnd="true"
            android:text="7 Ian 2019"
            android:textAlignment="center"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_ans2"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_above="@+id/text_comment2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-28dp"
            android:text="1 answers"
            android:textAlignment="center"
            android:textStyle="italic" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_forum3"
        android:layout_width="match_parent"
