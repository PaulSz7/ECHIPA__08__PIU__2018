<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.piu.studentapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.piu.studentapp.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.piu.studentapp.MainMenu" />
        <activity android:name="com.example.piu.studentapp.CheckInActivity" />
        <activity android:name="com.example.piu.studentapp.RatingActivity" />
        <activity android:name="com.example.piu.studentapp.StudentMenuActivity" >
        </activity>
        <activity android:name="com.example.piu.studentapp.QuestionActivity" />
        <activity android:name="com.example.piu.studentapp.ForumActivity" />
        <activity android:name="com.example.piu.studentapp.ShopActivity" />
        <activity
            android:name="com.example.piu.studentapp.ChatActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.piu.studentapp.PrivateChatActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.piu.studentapp.NotificationActivity"
            android:theme="@style/AppTheme      " />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.piu.studentapp.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>